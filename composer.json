{
    "name": "siketyan/loxcan",
    "description": "Universal Lock File Scanner for Git.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Naoki Ikeguchi",
            "email": "root@siketyan.dev"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2",
        "mschop/pathogen": "^0.6.1",
        "symfony/config": "^4.4",
        "symfony/console": "^4.4",
        "symfony/dependency-injection": "^4.4",
        "symfony/process": "^4.4",
        "symfony/symfony": "^4.4",
        "symfony/yaml": "^4.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.4"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Siketyan\\Loxcan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Siketyan\\Loxcan\\": "tests/"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v --dry-run",
        "fix": "php-cs-fixer fix -v",
        "test": "phpunit ./tests",
        "tests": [
            "@lint",
            "@test"
        ]
    }
}
